<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:DaysCounter2.Lang"
        xmlns:colorpicker="clr-namespace:AvaloniaColorPicker;assembly=AvaloniaColorPicker"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" SizeToContent="WidthAndHeight" CanResize="False"
        x:Class="DaysCounter2.ColorSelector"
        Title="ColorSelector">
    <Grid RowDefinitions="*,40" RowSpacing="10" Margin="10">
		<colorpicker:ColorPicker x:Name="ColorPicker"></colorpicker:ColorPicker>
        <Button Grid.Row="1" Content="{x:Static lang:Resources.color_select}" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Click="Button_Click"></Button>
    </Grid>
</Window>

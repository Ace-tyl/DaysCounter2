<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="using:DaysCounter2.Utils"
        xmlns:lang="clr-namespace:DaysCounter2.Lang"
        xmlns:local="using:DaysCounter2"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="DaysCounter2.SettingsWindow"
        Width="800" Height="350" MinWidth="800" MinHeight="350" x:DataType="local:SettingsWindow"
        Title="{x:Static lang:Resources.ui_settings}">
    <DockPanel>
		<Button DockPanel.Dock="Bottom" Height="40" HorizontalAlignment="Stretch" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Content="{x:Static lang:Resources.settings_save}" x:Name="SaveButton" Click="SaveButton_Click"></Button>
        <Grid Margin="10" ColumnDefinitions="200,*,100" ColumnSpacing="10" RowDefinitions="40,40,40,40,40,*" RowSpacing="10">
            <!-- Language -->
            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="18" VerticalAlignment="Center" Text="{x:Static lang:Resources.settings_language}"></TextBlock>
            <ComboBox Grid.Row="0" Grid.Column="1" x:DataType="utils:LanguageManager" ItemsSource="{Binding languages}" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="LanguageSelector">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding name}" FlowDirection="{Binding flowDirection}"></TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Grid.Row="0" Grid.Column="2" FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{x:Static lang:Resources.settings_default}" Click="LangDefault_Click"></Button>
            
            <!-- Display Font -->
            <TextBlock Grid.Row="1" Grid.Column="0" FontSize="18" VerticalAlignment="Center" Text="{x:Static lang:Resources.settings_font}"></TextBlock>
            <ComboBox Grid.Row="1" Grid.Column="1" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="FontSelector" SelectedIndex="0">
                <ComboBoxItem Content="{x:Static lang:Resources.settings_font_default}"></ComboBoxItem>
            </ComboBox>
            <Button Grid.Row="1" Grid.Column="2" FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{x:Static lang:Resources.settings_default}" Click="FontDefault_Click"></Button>
            
            <!-- Background Color -->
            <TextBlock Grid.Row="2" Grid.Column="0" FontSize="18" VerticalAlignment="Center" Text="{x:Static lang:Resources.settings_color}"></TextBlock>
            <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="40,*,40,*,40,*" ColumnSpacing="10">
                <Button Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="PickFutureColor" Click="PickFutureColor_Click"></Button>
                <Button Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="PickPastColor" Click="PickPastColor_Click"></Button>
                <Button Grid.Column="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="PickDistantColor" Click="PickDistantColor_Click"></Button>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="18" Text="{x:Static lang:Resources.settings_color_future}"></TextBlock>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" FontSize="18" Text="{x:Static lang:Resources.settings_color_past}"></TextBlock>
                <TextBlock Grid.Column="5" VerticalAlignment="Center" FontSize="18" Text="{x:Static lang:Resources.settings_color_distant}"></TextBlock>
            </Grid>
            <Button Grid.Row="2" Grid.Column="2" FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{x:Static lang:Resources.settings_default}" Click="ColorDefault_Click"></Button>
            
            <!-- Date Time Format -->
            <TextBlock Grid.Row="3" Grid.Column="0" FontSize="18" VerticalAlignment="Center" Text="{x:Static lang:Resources.settings_dateTimeFormat}" PointerPressed="DateTimeFormatText_PointerPressed" Cursor="Hand" TextDecorations="Underline"></TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" FontSize="18" VerticalAlignment="Stretch" VerticalContentAlignment="Center" x:Name="DateTimeFormatInput" TextChanged="DateTimeFormatInput_TextChanged"></TextBox>
            <Button Grid.Row="3" Grid.Column="2" FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{x:Static lang:Resources.settings_default}" Click="TimeFormatDefault_Click"></Button>
            
            <!-- Show Destination Time -->
            <TextBlock Grid.Row="4" Grid.Column="0" FontSize="18" VerticalAlignment="Center" Text="{x:Static lang:Resources.settings_destination}"></TextBlock>
            <ComboBox Grid.Row="4" Grid.Column="1" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="DestModeSelector" SelectedIndex="0">
                <ComboBoxItem Content="{x:Static lang:Resources.settings_destination_always}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static lang:Resources.settings_destination_future}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static lang:Resources.settings_destination_none}"></ComboBoxItem>
            </ComboBox>
            <Button Grid.Row="4" Grid.Column="2" FontSize="18" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{x:Static lang:Resources.settings_default}" Click="DestModeDefault_Click"></Button>
        </Grid>
    </DockPanel>
</Window>
